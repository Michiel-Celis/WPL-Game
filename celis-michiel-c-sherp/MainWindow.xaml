<Window x:Class="celis_michiel_c_sherp.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:celis_michiel_c_sherp"
		mc:Ignorable="d"
		Title="Cookie Planet" Height="720" Width="1280"
		MinWidth="480" MinHeight="360" SizeChanged="Window_SizeChanged">
	<Window.Background>
		<ImageBrush ImageSource="Resources/background.jpeg"/>
	</Window.Background>
	<Grid>
		<!-- Background layer -->
		<Grid>
			<Image Style="{StaticResource Planet}"/>
			<Image Style="{StaticResource Sun}"/>
			<Image Style="{StaticResource Moon}"/>
		</Grid>
		
		<!-- Overlay toolbox -->
		<StackPanel Background="LightGray" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200">
			<!-- Add your options here -->
		</StackPanel>
	</Grid>
</Window>